= form_for @pharaoh do |f|
  - if @pharaoh.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pharaoh.errors.count, "error")} prohibited this pharaoh from being saved:"
      %ul
        - @pharaoh.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :image
    = f.file_field :image

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :tenure
    = f.text_field :tenure
  .field
    = f.label :successor
    = f.text_field :successor
  .field
    = f.label :biography
    = f.text_area :biography
  .actions
    = f.submit 'Save'
